{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "./node_modules/"
          ]
      }
  },
  "include": [
      "./src/**/*"
  ],
  "exclude":[
    "./src/test",
    "./src/**/*.spec.ts", // exclude all that contain "spec.ts" in name
    "./dist"
  ]
}