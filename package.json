{
  "name": "NTEP-Scaffolding",
  "version": "0.0.1",
  "description": "Node TypeScript Express Postgres Rest API Scaffolding",
  "main": "main.js",
  "scripts": {
    "test": "mocha --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trisell/NTEP-Scaffolding.git"
  },
  "author": "Dominic Desimini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trisell/NTEP-Scaffolding/issues"
  },
  "homepage": "https://github.com/trisell/NTEP-Scaffolding#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "envalid": "^6.0.2",
    "express": "^4.17.3",
    "pg": "^7.9.0",
    "typeorm": "^0.2.18",
    "winston": "^3.2.1"
  },  
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.15",
    "@types/pg": "^7.4.14",
    "@types/supertest": "^2.0.8",
    "jest": "^26.6.3",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-lint": "^4.5.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx|js|jsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "bail": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(express-validator)/)"
    ],
    "testMatch": [
      "./**/*.spec.(ts|js)"
    ]
  }
}
