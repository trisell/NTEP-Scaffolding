{
  "name": "NTGP-Scaffolding",
  "version": "0.0.1",
  "description": "Node TypeScript GraphQL Postgres API Scaffolding",
  "main": "main.ts",
  "scripts": {
    "test": "mocha --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trisell/NTGP_Scaffolding.git"
  },
  "author": "Dominic Desimini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trisell/NTGP_Scaffolding/issues"
  },
  "homepage": "https://github.com/trisell/NTGP_Scaffolding#readme",
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "body-parser": "^1.20.1",
    "envalid": "^6.0.2",
    "express": "^4.18.2",
    "http": "^0.0.1-security",
    "pg": "^8.8.0",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.4",
    "typescript": "^4.9.4"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx|js|jsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "bail": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(express-validator)/)"
    ],
    "testMatch": [
      "./**/*.spec.(ts|js)"
    ]
  }
}
